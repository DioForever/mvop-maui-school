<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SchoolApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SchoolApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="School"
            ContentTemplate="{DataTemplate local:MainPage}"/>

        <ShellContent
            Title="Teachers"
            ContentTemplate="{DataTemplate local:AllTeachersPage}"/>
    
        <ShellContent
            Title="Handymans"
            ContentTemplate="{DataTemplate local:AllHandymanPage}"/>

        <ShellContent
            Title="Support"
            ContentTemplate="{DataTemplate local:AllSupportPage}"/>

        <ShellContent
            Title="Students"
            ContentTemplate="{DataTemplate local:AllStudentsPage}"/>

    </TabBar>
</Shell>
